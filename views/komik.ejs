<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <title>Manga-Maru</title>
    </head>

<style>
    @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css");
      .judul-manga{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 170px;
} 

.sinopsis{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 500px;
}



</style>
<body>
    <!-- Navbar Area -->
    <%- include('./components/navbar.ejs') %> 

      <%- include('./components/nav.ejs') %> 


<!-- Utils Area -->
<div class="container-fluid row justify-content-end fixed-bottom" style="height: 50px;">
    <a href="#bawah" class="bg-primary btn btn-primary mb-3" style="width: 64px;height: 64;">
        <i class="bi bi-arrow-down"></i>
    </a>
</div>

<!-- loading area -->

<%- include('./loading.ejs') %> 


<!-- Manga Area -->

<div class="d-flex justify-content-center">
    <div class="row container justify-content-center">
        <div class="col-9 mt-5 mb-3 text-center text-primary fw-bold fs-1">
            <div class="m-2 text-capitalize" id="terbaru">
              <%= manga[2] %> 
            </div>
          </div>
        <% if (manga !== undefined) { %>
            <% manga[0].forEach(e => { %>

              <div class="row col-md-10 col-lg-10 my-2 m-md-2 shadow rounded" style="margin: 0px;padding: 0;">
                <div class="col-10 col-md-5" style="padding: 0px;">
                  <a href="/komik/detail/<%= e.endpoint %> ">
                    <img src="<%= e.thumb %> " class="m-md-2 m-4 gambar img-fluid" style="margin-right: 0px !important;">
                </a>
                </div>
                <div class="col-12 col-md-6 m-2" style="padding: 0px;">
                  <div class="m-2 judul-manga">
                    <a href="/komik/detail/<%= e.endpoint %> " class="fw-bold text-dark" style="text-overflow: ellipsis;text-decoration: none;">
                      <%= e.title %> 
                    </a>
                  </div>
                  <div class="m-2">
                    <p class="text-muted">
                        <%= e.info %> 
                    </p>
                  </div>
                  <div class="m-2">
                      <p>
                          <%= e.sinopsis %> 
                      </p>
                  </div>
                  <div class="mx-2 my-1 d-inline">
                    <a href="" style="text-decoration: none;">
                        <span class="badge rounded-pill bg-warning">
                            Chapter 1 
                        </span>
                    </a>
                    <a href="" style="text-decoration: none;">
                        <span class="badge rounded-pill bg-success">
                            Chapter <%= e.chapterTerbaru %> 
                        </span>
                    </a>
                    <a style="text-decoration: none;">
                        <span class="badge rounded-pill bg-primary">
                            <%= e.genre[0] %> 
                        </span>
                    </a>
                    <a style="text-decoration: none;">
                        <span class="badge rounded-pill bg-danger">
                            <%= e.genre[1] %> 
                        </span>
                    </a>
                  </div>
                </div>
              </div>

                <% }) %>
            <% } %>
      
<!-- pagination Area -->
        <div class="d-flex mt-3 mb-5 col-10 fw-bold fs-md-5 fs-6 text-light justify-content-between" id="bawah">
            <% if (manga[1] < 2) { %>
             
                <a href="" style="text-decoration: none;" class="col-md-4 col-5">
                    
                </a>

            <% } else { %>
             
            <a href="/komik/terbaru?page=<%= manga[1]-1%>" style="text-decoration: none;" class="btn btn-primary col-md-4 col-5">
                <<
            </a>
            
            <% } %>
            <a href="/komik/terbaru?page=<%= manga[1]+1%>" style="text-decoration: none;" class="btn btn-primary col-md-4 col-5">
                >>
            </a>
             
        </div>
        
    </div>
  </div>

</body>
</html>
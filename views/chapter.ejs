<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
        <title>Manga-Maru</title>
    </head>
    <body>
<!-- Navbar Area -->
<%- include('./components/navbar.ejs') %> 
<%- include('./components/nav.ejs') %> 


<!-- loading area -->

<%- include('./loading.ejs') %> 


<!-- manga area -->
<% if (data.chapter.judul) { %>
    <div class="container-fluid">
        <div class="row justify-content-center bg-dark">
            <% data.chapter.img_link.forEach(e => { %>
             <div class="col-10 mx-3 text-center">
                 <img class="img-fluid" src="<%= e.image_link %> " id="<%= e.id %> " alt="">
             </div>
            <% }) %>
            <div class="d-flex mt-3 mb-5 col-10 fw-bold fs-md-5 fs-6 text-light justify-content-between" id="bawah">
                <% if (data.sebelum) { %>
                    
                    <a href="/komik/baca/<%=data.sebelum%>" style="text-decoration: none;" class="btn btn-primary col-md-4 col-5">
                    <<
                    </a>
                                
                 
                <% } %>                 

                <% if (data.lanjut) { %>
                    <a href="/komik/baca/<%=data.lanjut%>" style="text-decoration: none;" class="btn btn-primary col-md-4 col-5">
                        >>
                    </a>
                <% } %>
                 
            </div>
        </div>
    </div>
    
    <% } else { %>
        <script>
            setTimeout("location.reload(true);")
        </script>
        <%- include('./loading.ejs') %> 
        gagal
     <% } %>
      

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/index.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Manga-Maru</title>
</head>

<style>
  .judul-manga{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 170px;
}

.info-manga{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
}

.outer {
    width: 819px;
    height: 266px;
    white-space: nowrap;
    /* position: relative; */
    overflow-x: scroll;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
}

.outer div {
    width: 204px;
    height: 229px;
    /* float: none; */
    display: inline-block;
    /* zoom: 1; */
}
</style>

<body onload="">


  <!-- Nabar Area -->
  <%- include('./components/navbar.ejs') %> 
  <%- include('./components/nav.ejs') %> 

<!-- loading area -->

<%- include('./loading.ejs') %> 


<!-- Manga baru -->


      <div class="d-flex justify-content-center">
        <div class="row container justify-content-center">
          <div class="col-9 mt-5 mb-3 text-center btn btn-outline-primary fw-bold fs-3 rounded-pill shadow">
            <div class="m-2" id="terbaru">
              Manga Tebaru
            </div>
          </div>
            <% if (manga !== undefined) { %>
                <% manga.mangaBaru.forEach(e => { %>
    
                  <div class="row col-md-7 col-lg-4 m-2 shadow rounded" style="margin: 0px;padding: 0;">
                    <div class="col-6 col-md-5" style="padding: 0px;">
                      <a href="/komik/detail/<%= e.endpoint %> ">
                        <img src="<%= e.thumb %> " class="m-2" style="width: 143px;margin-right: 0px !important;">
                      </a>
                    </div>
                    <div class="col-5 col-md-7" style="padding: 0px;">
                      <div class="mx-2 judul-manga">
                        <a href="/komik/detail/<%= e.endpoint %> " class="fw-bold text-dark" style="text-overflow: ellipsis;text-decoration: none;">
                          <%= e.title %> 
                        </a>
                      </div>
                      <div class="mx-2" >
                        <p class="text-muted info-manga" style="margin-bottom: 0px!important;">
                            <%= e.info %> 
                        </p>
                      </div>
                      <div class="d-inline mx-2">
                        <!-- <a href="" style="text-decoration: none;">
                            <span class="badge rounded-pill bg-warning">
                                Chapter 1 
                            </span>
                        </a> -->
                        <a href="" style="text-decoration: none;">
                            <span class="badge rounded-pill bg-success">
                                Chapter <%= e.chapterTerbaru %> 
                            </span>
                        </a>
                      </div>
                    </div>
                  </div>

                    <% }) %>
                <% } %>
          
            <div class="d-flex justify-content-center mt-3 mb-5 col-9 fw-bold fs-md-5 fs-6 text-light" style="text-decoration: none;">
              <div class="bg-primary rounded-pill text-center col-md-6 col-10 shadow">
                <a class="text-light" style="text-decoration: none;" href="/komik/terbaru?page=1">Cek selengkapnya >></a>
              </div>
            </div>
            
        </div>
      </div>

<!-- manhua area -->

      <div class="d-flex justify-content-center">
        <div class="row container justify-content-center">
          <div class="col-9 mt-5 mb-3 text-center btn btn-outline-primary fw-bold fs-3 rounded-pill shadow">
            <div class="m-2" id="manhua">
              Manhua
            </div>
          </div>
          <div class="col-12 col-md-9 mt-2 mb-2 float-end d-flex justify-content-end">
            <div class="text-start text-md-end fw-bold text-primary col-12 float-end">
              <a href="/komik/manhua?page=1" style="text-decoration: none;">
                Cek selengkapnya >>                
              </a>
            </div>
          </div>
          <div class="row flex-row flex-nowrap outer border rounded shadow">
            <% manga.manhuaBaru.forEach(e => { %>
             <div class="col-3 m-2">
               <div class="card d-grid m-1">
                 <img src="<%= e.thumb %> " class="card-img-top" style="width: 203px;height: 127px;margin-right: 0px !important;" alt="">
                 <div class="card-body">
                   <div class="judul-manga">
                     <a class="text-dark fw-bold" style="text-overflow: ellipsis!important;text-decoration: none;" href=""><%= e.title %> </a>
                     <p class="text-muted card-text" style="text-overflow: ellipsis!important;text-decoration: none;">
                      <%= e.info %> 
                    </p>
                    </div>
                    <!-- <div class="d-inline">
                      <a href="" style="text-decoration: none;">
                          <span class="badge rounded-pill bg-warning card-link">
                              Chapter 1 
                          </span>
                      </a>
                      <a href="" style="text-decoration: none;">
                          <span class="badge rounded-pill bg-success card-link">
                              Chapter <%= e.chapterTerbaru %> 
                          </span>
                      </a>
                    </div> -->
                 </div>
               </div>

             </div>



            <% }) %>
          </div>

        </div>
      </div>


<!-- Manhwa area -->
<div class="d-flex justify-content-center">
  <div class="row container justify-content-center">
    <div class="col-9 mt-5 mb-3 text-center btn btn-outline-primary fw-bold fs-3 rounded-pill shadow">
      <div class="m-2"id="manhwa">
        Manhwa
      </div>
    </div>
    <div class="col-12 col-md-9 mt-2 mb-2 float-end d-flex justify-content-end">
      <div class="text-start text-md-end fw-bold text-primary col-12 float-end">
        <a href="/komik/manhwa?page=1" style="text-decoration: none;">
          Cek selengkapnya >>                
        </a>
      </div>
    </div>
    <div class="row flex-row flex-nowrap outer border rounded shadow">
      <% manga.manhwaBaru.forEach(e => { %>
       <div class="col-3 m-2">
         <div class="card d-grid m-1">
           <img src="<%= e.thumb %> " class="card-img-top" style="width: 203px;height: 127px;margin-right: 0px !important;" alt="">
           <div class="card-body">
             <div class="judul-manga">
               <a class="text-dark fw-bold" style="text-overflow: ellipsis!important;text-decoration: none;" href=""><%= e.title %> </a>
               <p class="text-dark card-text" style="text-overflow: ellipsis!important;text-decoration: none;">
                <%= e.info %>
              </p>
              </div>
           </div>
         </div>

       </div>



      <% }) %>
    </div>

  </div>
</div>



</body>
</html>
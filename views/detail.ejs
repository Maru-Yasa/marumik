<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
        <title>Manga-Maru</title>
    </head>
<style>
.synopsis-manga{
    /* white-space: nowrap; */
    overflow: scroll;
    text-overflow: ellipsis;
    height: 200px;
}

</style>


    <body>
<!-- Navbar Area -->
<%- include('./components/navbar.ejs') %> 
<%- include('./components/nav.ejs') %> 


<!-- loading area -->

<%- include('./loading.ejs') %> 


<!-- manga area -->
    <% if (data.title !== "") { %>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 m-2 row justify-content-center">
                    <div class="row col-12 justify-content-center">
                        <div class="col-md-3 text-center">
                            <img src="<%= data.thumb %> " class="img-fluid">                            
                        </div>
                        <div class="col-md-7 m-2">
                            <a style="text-decoration: none;" class="fs-2 fw-bold text-capitalize"><%= data.title %> </a>
                            <br>
                            <p class="text-muted synopsis-manga">
                                <%= data.synopsis %> 
                            </p>
                            <div class="d-inline">
                                <span class="badge rounded-pill bg-success">
                                    <%= data.status %> 
                                </span>
                                <% data.genre_list.forEach(e => { %>
                                 <span class="badge rounded-pill bg-warning">
                                     <%= e.genre_name %> 
                                 </span>
                                <% }) %>    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- Info Area -->
        <div class="container">
            <div class="row justify-content-center my-3">
                <div class="col-10 my-4">
                      <ul class="nav nav-pills justify-content-center mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item mx-md-4" role="presentation">
                          <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Chapter</button>
                        </li>

                        <li class="nav-item mx-md-4" role="presentation">
                          <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Synopsis</button>
                        </li>
                      </ul>
                      <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                            <table class="table table-striped">
                                <tbody class="">
                                        <% data.chapter.forEach(e => { %>
                                            <tr class="text-center">
                                                <td class="text-center">
                                                    <a href="/komik/baca/<%= e.chapter_endpoint %> " class="text-primary text-center m-3" style="text-decoration:none;">
                                                        <%= e.chapter_title %> 
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <!-- Utils Area -->
                            <div class="container-fluid row justify-content-end fixed-bottom" style="height: 50px;">
                                <a href="#bawah" class="bg-primary btn btn-primary mb-3" style="width: 64px;height: 64;">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                            <div id="bawah"></div>
                        </div>
                        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                            <p class="text-muted text-center">
                                <%= data.synopsis %>                                
                            </p>
                        </div>
                      </div>
                      
                </div>
            </div>
        </div>





    <% } else { %>
        <script>
            setTimeout("location.reload(true);")
        </script>
        <%- include('./loading.ejs') %> 
     <% } %>
      

</body>
</html>